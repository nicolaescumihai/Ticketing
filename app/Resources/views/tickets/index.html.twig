{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tickets list</h1>
<br>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ticketuuid</th>
                <th>Tickettype</th>
                <th>Ticketstatus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td><a href="{{ path('tickets_show', { 'id': ticket.id }) }}">{{ ticket.id }}</a></td>
                <td>{{ ticket.ticketUuid }}</td>
                <td>{{ ticket.ticketType }}</td>
                <td>{{ ticket.ticketStatus }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tickets_show', { 'id': ticket.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tickets_edit', { 'id': ticket.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tickets_new') }}">Create a new ticket</a>
        </li>
    </ul>
{% endblock %}
